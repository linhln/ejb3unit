<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>bm</artifactId>
		<groupId>com.bm</groupId>
		<version>1.0.5</version>
		<relativePath>../bm/pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.bm</groupId>
	<artifactId>ejb3unit</artifactId>
	<name>ejb3unit</name>
	<version>1.1.0-beta-5-SNAPSHOT</version>
	<description>Out of Container Testing of EJB 3.0</description>
	<url />
	<issueManagement>
		<url>http://dasemi.homeftp.net:8080/browse/COM</url>
	</issueManagement>
	<ciManagement>
		<system>continuum</system>
		<notifiers>
			<notifier> 
				<configuration>
					<address>fabian@bauschulte.de</address>
				</configuration>
			</notifier>
			<notifier>
				<configuration>
					<address>daniel.wiese@web.de</address>
				</configuration>
			</notifier>
		</notifiers>
	</ciManagement>
	<developers>
		<developer>
			<id>daniel</id>
			<name>Dabiel Wiese</name>
			<email>Dabiel.Wiese@siemens.com</email>
			<organization>Siemens</organization>
			<timezone />
		</developer>
		<developer>
			<id>fabian</id>
			<name>Fabian Bauschulte</name>
			<email>Fabian.Bauschulte@rewe-group.com</email>
			<organization>RIS</organization>
			<timezone />
		</developer>
	</developers>
	<scm>
		<url>http://svn.sourceforge.net/viewcvs.cgi/ejb3unit/tags/ejb3unit-1.1.0-beta-4</url>
		<connection>scm:svn:https://ejb3unit.svn.sourceforge.net/svnroot/ejb3unit/tags/ejb3unit-1.1.0-beta-4</connection>
		<developerConnection>scm:svn:https://ejb3unit.svn.sourceforge.net/svnroot/ejb3unit/tags/ejb3unit-1.1.0-beta-4</developerConnection>
	</scm>
	<organization>
		<name>BM-Org</name>
		<url>http://dasemi.homeftp.net:8090/bm/ejb3unit</url>
	</organization>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<testSourceDirectory>src/test/java</testSourceDirectory>
		<plugins>
			
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<includes>
						<include>**/*Test.java</include>
					</includes>
					<!-- <forkMode>none</forkMode>-->
					<argLine>-Xmx300m</argLine>
					<printSummary>true</printSummary>
					<reportFormat>plain</reportFormat>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>compile</scope>
		</dependency>
		<!-- logging -->
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.13</version>
		</dependency>
		<!-- commons dependencies -->
		<dependency>
			<groupId>commons-beanutils</groupId>
			<artifactId>commons-beanutils</artifactId>
			<version>1.7.0</version>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.3</version>
		</dependency>
		<!-- for mock testing -->
		<dependency>
			<groupId>jmock</groupId>
			<artifactId>jmock</artifactId>
			<version>1.0.1</version>
		</dependency>
		<!-- contains session context (change later to jboss-j2ee.jar) -->
		<dependency>
			<groupId>org.jboss</groupId>
			<artifactId>jbossall-client</artifactId>
			<version>4.0.4-CR2</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
		   <groupId>org.hibernate</groupId>
  			<artifactId>hibernate-entitymanager</artifactId>
			<version>3.2.1.ga</version>
	      </dependency>
	      <dependency>
			 <groupId>org.hibernate</groupId>
			 <artifactId>hibernate</artifactId>
			 <version>3.2.1.ga</version>
	      </dependency>
		<!-- for in momory database -->
		<dependency>
			<groupId>hsqldb</groupId>
			<artifactId>hsqldb</artifactId>
			<version>1.8.0.1</version>
		</dependency>
	</dependencies> 
	<reporting>
		<plugins>
			
			<plugin>
				<artifactId>maven-pmd-plugin</artifactId>
				<configuration>
					<linkXref>true</linkXref>
					<sourceEncoding>utf-8</sourceEncoding>
					<minimumTokens>80</minimumTokens>
					<targetJdk>1.5</targetJdk>
				</configuration>
				<reportSets>
					<reportSet>
						<reports>
							<report>cpd</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>
	
</project>
